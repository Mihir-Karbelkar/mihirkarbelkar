---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

const title = 'Politics Blog';
const description = 'Analysis and commentary on political developments and current affairs';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header domain='politics' />
		<main class="container mx-auto px-4 py-8 mt-4">
			<h1 class="text-4xl font-bold mb-8">🏛️ {title}</h1>
			<p class="text-xl mb-8">{description}</p>
			
			<div class="prose max-w-none">
				<p>Welcome to my politics blog. Here you'll find my thoughts and analysis on current political events and developments.</p>
				<p>Content coming soon...</p>
			</div>
		</main>
		<Footer />
	</body>
</html> 